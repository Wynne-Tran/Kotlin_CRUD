<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="myViewModel"
            type="com.example.roomdemo.SubscriberViewModel" />
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:text="@={myViewModel.inputName}"
        android:hint="Subscriber's"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:text="@={myViewModel.inputEmail}"
        android:hint="Subscriber's email"
        android:inputType="textPersonName"
        android:textStyle="bold" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Save_or_Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@={myViewModel.saveOrUpdateText}"
            android:onClick="@{()->myViewModel.saveOrUpdate()}"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginRight="2dp"
            />

        <Button
            android:id="@+id/Clear_or_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@={myViewModel.clearOrDeleteText}"
            android:onClick="@{()->myViewModel.clearAllOrDelete()}"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/subscriber_recyclerView"
        android:layout_margin="5dp"
        android:layout_weight="1" />
</LinearLayout>
</layout>